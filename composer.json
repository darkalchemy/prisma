{
  "name": "odan/prisma",
  "type": "project",
  "description": "A skeleton project for Slim 3",
  "keywords": [
    "slim",
    "skeleton",
    "framework",
    "psr-7",
    "middleware"
  ],
  "homepage": "https://github.com/odan/prisma",
  "license": "MIT",
  "require": {
    "php": "^7.2",
    "cakephp/database": "^3.7",
    "monolog/monolog": "^1.18.0",
    "odan/phinx-migrations-generator": "^4",
    "odan/slim-csrf": "^1.0.0",
    "odan/slim-session": "1.0.0",
    "odan/twig-assets": "^2.0.0",
    "odan/twig-translation": "^1.1.0",
    "slim/slim": "^3.12",
    "slim/twig-view": "^2.4",
    "symfony/console": "^4",
    "symfony/translation": "^4"
  },
  "require-dev": {
    "gettext/gettext": "^4.4",
    "odan/docblock-checker": "^1.1",
    "phpunit/phpunit": "^7.0",
    "phpstan/phpstan-shim": "^0.11.1"
  },
  "scripts": {
    "post-install-cmd": "ant update-assets",
    "post-update-cmd": "ant update-assets",
    "post-create-project-cmd": "ant update-assets"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "src/Utility/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  }
}
