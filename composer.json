{
  "name": "odan/prisma",
  "type": "project",
  "description": "A skeleton project for Slim 3",
  "keywords": [
    "slim",
    "skeleton",
    "framework",
    "psr-7",
    "middleware"
  ],
  "homepage": "https://github.com/odan/prisma",
  "license": "MIT",
  "require": {
    "php": "^7.0",
    "aura/session": "^2.1",
    "doctrine/annotations": "^1.5",
    "doctrine/cache": "^1.7",
    "monolog/monolog": "^1.18.0",
    "odan/config": "^0.2.0",
    "odan/database": "^0.4.0",
    "odan/hydrator": "^1.0",
    "odan/phinx-migrations-generator": "^2.1",
    "odan/twig-assets": "^0.2.2",
    "odan/twig-translation": "^0.2.2",
    "odan/util": "^0.2.0",
    "php-di/slim-bridge": "^1.0",
    "slim/slim": "^3.9",
    "slim/twig-view": "^2.3",
    "symfony/translation": "~3.0"
  },
  "require-dev": {
    "block8/php-docblock-checker": "^1.3",
    "phpunit/phpunit": "^6.0"
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-clover build/logs/clover.xml --coverage-html build/coverage",
    "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit -n --no-patch 1 src tests",
    "update-assets": "php bin/composer.php update-assets",
    "post-update-cmd": "php bin/composer.php post-update-cmd",
    "post-install-cmd": "php bin/composer.php post-install-cmd"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    },
    "files": [
      "config/common.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests"
    }
  },
  "config": {
    "sort-packages": true
  }
}
