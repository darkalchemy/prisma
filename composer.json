{
  "name": "odan/prisma",
  "type": "project",
  "description": "A skeleton project for Slim 3",
  "keywords": [
    "slim",
    "skeleton",
    "framework",
    "psr-7",
    "middleware"
  ],
  "homepage": "https://github.com/odan/prisma",
  "license": "MIT",
  "require": {
    "php": "^7.0",
    "aura/session": "^2.1",
    "illuminate/database": "^5.5",
    "monolog/monolog": "^1.18.0",
    "odan/phinx-migrations-generator": "2.1.4",
    "odan/slim-csrf": "^0.1.0",
    "odan/slim-di": "^0.2.0",
    "odan/twig-assets": "^0.2.2",
    "odan/twig-translation": "^0.2.4",
    "odan/util": "^0.4.0",
    "slim/slim": "^3.9",
    "slim/twig-view": "^2.3",
    "symfony/console": "^3.4",
    "symfony/translation": "~3.0"
  },
  "require-dev": {
    "block8/php-docblock-checker": "^1.3",
    "phpunit/phpunit": "^6.0"
  },
  "scripts": {
    "post-update-cmd": "php cli.php update-assets",
    "post-install-cmd": "php cli.php update-assets"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    },
    "files": [
      "config/common.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests"
    }
  },
  "config": {
    "sort-packages": true
  }
}
